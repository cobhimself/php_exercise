{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="pull-right">Development Invoice</h1>
        </div>
        <div class="row">
            <div class="pull-right">Date: {{ "now"|date("m/d/Y") }}</div>
        </div>
        <div class="row">
            <div class="form">
                <div class="form-group">
                    <label for="billTo">Bill To</label>
                    <textarea class="form-control" rows="3" id="billTo" cols="100" name="billTo">{{ timeSheet.billTo }}</textarea>
                </div>
            </div>
        </div>
        <div class="row" id="root">
            <table id="timeEntryTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="description-col">Description</th>
                        <th>Hourly Price</th>
                        <th>Hours</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        {% for entry in entries %}
                        <tr class="js-existing-entry" id="entry_{{ entry.id }}">
                            <td class="js-entry-description">{{ entry.description }}</td>
                            <td class="js-entry-hourlyPrice">{{ "$%01.2f"|format(entry.hourlyPrice) }}</td>
                            <td class="js-entry-hours">{{ "%01.2f"|format(entry.hours) }}</td>
                            <td class="js-entry-total row-total">{{ "$%01.2f"|format(entry.total) }}</td>
                            <td class="entry-controls">
                                    <button type="button" class="js-entry-save btn btn-success" data-entry="{{ entry.id }}" style="display: none"><i class="glyphicon glyphicon-floppy-disk"></i></button>
                                    <button type="button" class="js-entry-cancel btn btn-danger" data-entry="{{ entry.id }}" style="display: none"><i class="glyphicon glyphicon-ban-circle"></i></button>
                                    <button type="button" class="js-entry-edit btn btn-primary" data-entry="{{ entry.id }}"><i class="glyphicon glyphicon-edit"></i></button>
                                    <button type="button" class="js-entry-delete btn btn-danger" data-entry="{{ entry.id }}"><i class="glyphicon glyphicon-trash"></i></button>
                            </td>
                        </tr>
                        {% endfor %}
                    <tr id="newEntryFormContainer">
                        <td class="js-entry-description">
                            <div class="input-group">
                                <input type="text" class=".js-entry-description-input form-control" name="description">
                            </div>
                        </td>
                        <td class="js-entry-hourlyPrice">
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                <input type="text" class=".js-entry-price-input form-control" name="hourlyPrice">
                            </div>
                        </td>
                        <td class="js-entry-hours">
                            <div class="input-group">
                                <input type="text" class=".js-entry-hours-input form-control" name="hours">
                            </div>
                        </td>
                        <td class="js-entry-total row-total">$0</td>
                        <td><button class="btn btn-default js-add-entry-button" type="button"><i class="glyphicon glyphicon-plus-sign"></i>Add</button></td>
                    </tr>
                    <tr class="blank-row-bg" id="subtotal_row">
                        <td class="totals-label" colspan="4">Subtotal</td>
                        <td id="subtotal">$0</td>
                    </tr>
                    <tr class="blank-row-bg" id="tax_row">
                        <td class="totals-label" colspan="4">Tax (8%)</td>
                        <td id="tax">$0</td>
                    </tr>
                    <tr class="blank-row-bg" id="total_row">
                        <td class="totals-label" colspan="4">Total</td>
                        <td id="total">$0</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row btn-bar">
            <div class="pull-right">
                <button class="btn btn-default" type="button" id="generatePDF">Generate PDF</button>
                <button class="btn btn-default" type="button" id="save">Save</button>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var TimeSheet = {{ timeSheetJson|raw }};
    </script>
{% endblock %}
