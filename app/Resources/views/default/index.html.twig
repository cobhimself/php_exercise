{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="pull-right">Development Invoice</h1>
        </div>
        <div class="row">
            <div class="pull-right">Date: {{ "now"|date("m/d/Y") }}</div>
        </div>
        <div class="row">
            <div class="form">
                <div class="form-group">
                    <label for="billTo">Bill To</label>
                    <textarea class="form-control" rows="3" id="billTo" cols="100">{{ timeSheet.billTo }}</textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <table id="timeEntryTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="description-col">Description</th>
                        <th>Hourly Price</th>
                        <th>Hours</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        {% for entry in entries %}
                        <tr>
                            <td>{{ entry.description }}</td>
                            <td>{{ entry.hourlyPrice }}</td>
                            <td>{{ entry.hours }}</td>
                            <td>Total</td>
                        </tr>
                        {% endfor %}
                    <tr>
                        <td>
                            <input type="text" class="form-control" name="description">
                        </td>
                        <td>
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                <input type="text" class="form-control" name="hourlyPrice">
                            </div>
                        </td>
                        <td><input type="text" class="form-control" name="hours"></td>
                        <td class="row-total">$0</td>
                        <td><button class="btn btn-default" type="button"><i class="glyphicon glyphicon-plus-sign"></i>Add</button></td>
                    </tr>
                    <tr class="blank-row-bg" id="subtotal_row">
                        <td class="totals-label" colspan="4">Subtotal</td>
                        <td id="subtotal">$0</td>
                    </tr>
                    <tr class="blank-row-bg" id="tax_row">
                        <td class="totals-label" colspan="4">Tax (8%)</td>
                        <td id="tax">$0</td>
                    </tr>
                    <tr class="blank-row-bg" id="total_row">
                        <td class="totals-label" colspan="4">Total</td>
                        <td id="total">$0</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row btn-bar">
            <div class="pull-right">
                <button class="btn btn-default" type="button" id="generatePDF">Generate PDF</button>
                <button class="btn btn-default" type="button" id="save">Save</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">PE.initTimeSheet();</script>
{% endblock %}
